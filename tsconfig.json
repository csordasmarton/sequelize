{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "declaration": false,
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "lib",
    "preserveConstEnums": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "ES2020"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "test", "types", "lib", "scripts"]
}
